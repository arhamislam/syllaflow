{
    "name": "Syllaflow",
    "description": "AI-powered extension that extracts key information from course syllabus PDFs and integrates them into Notion workspaces.",
    "version": "0.0.1",
    "manifest_version": 3,
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["tabs", "activeTab", "scripting"],
    "web_accessible_resources": [
        {
            "resources": ["pdfjs/pdf.mjs", "pdfjs/pdf.worker.mjs"],
            "matches": ["<all_urls>"]
        }
    ],
    "content_scripts": [
        {
            "js": ["content.js"],
            "matches": ["<all_urls>"]
        }
    ]
}
